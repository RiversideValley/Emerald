{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Emerald.Uno/Emerald.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Emerald.Uno/Emerald.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net8.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
